.loader-container {
    width: 50%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    
    .loader{
        position: relative; 
    }
    
    .loader img {
      width: 100%;
    }
    
    .slide-box {
        position: absolute;
        top: 0;
        display: flex;
        flex-direction: row-reverse;
        width: 100%;
        height: 100%;
    }
    .solid {
        width: 100%;
        background-color: var(--card-color);
    }

    @media (max-width: 767px) {
        width: 100%;
    }
}
.chat-img{
    @media (max-width: 1199px) {
        width: 100%;
    }
}
.video-list{
    .owl-carousel{
        .owl-stage{
            right:0;
        }
    }
    .video-live{
        position: absolute;
        right: 5px;
        top:8px;
        .person-status{
            background-color: var(--color-200);
            border-radius: 0.25rem 0 0 0.25rem;
        }
    }
    .video-setting-icon{
        position: absolute;
        bottom: 25px;
        left:10px;
    }
}

.call-swich{
    position: absolute;
    bottom: 15px;
    left:50%;
    transform: translateX(-50%);
    width: 100%;
    margin: 0 auto;
    text-align: center;
}
.rating-block{
    ul{
        li{
            &.active{
                a{
                    color: var(--secondary-color);
                }
            }
        }
    }
}