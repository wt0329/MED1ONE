<script>
	// 수납대기 환자 전체 조회
	$.getJSON("<c:url value='/receive/receivePatientView.do' />").done(function(resp) {
				let tbody = $("#patientArea");
				tbody.empty();

				if (resp.length > 0) {
					$(resp).each(function(idx, patient) {
						let tr = $("<tr>").append(
								$("<td>").html(patient.recCode),
								$("<td>").html(patient.recep.patnt.patntNm),
								$("<td>").html(patient.recep.patnt.patntIdentino),
								$("<td>").html(""),
								$("<td>").html(""),
								$("<td>").html(""),
								$("<td>").append(
										$("<span>").addClass("badge bg-primary")
													.text("수납대기"))
								,$("<td>").html(""));
						tbody.append(tr);
					});
				} else {
					tbody.append($("<tr>").html(
							$("<td colspan='4'>").html(
								"해당 환자가 존재하지 않습니다.")));
				}
	});
	
	$("#receiveBtn").on("click",function(){
		let option = "width=900px, height=700px, top=300px, left=300px, scrollbars=no, location=no";
		window.open("<%=request.getContextPath()%>/receive/receiveBillView.do",'pop',option);
	});
	
</script>