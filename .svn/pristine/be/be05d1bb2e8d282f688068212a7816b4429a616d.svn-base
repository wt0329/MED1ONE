}

a.page-link {
	font-size: xx-small;
}

li.pagelink {
	width: 50px;
	font-size: xx-small;;
	text-align: center; /* 텍스트 정렬을 가운데로 설정 */
}

label {
	font-size: 14px; /* 텍스트 크기 설정 */
}

input[type="search"] {
	width: 100px !important; /* 입력칸의 길이 설정 */
}

ui {
	width: 50px;
