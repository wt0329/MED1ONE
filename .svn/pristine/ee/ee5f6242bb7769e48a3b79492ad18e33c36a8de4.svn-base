<!--날짜로 진료실 예약조회  -->
<select id="selectClinicTimeTable" resultType="ReservationVO">
    SELECT
    sub.RESVE_NUM,
    sub.RESVE_DATE,
    sub.RESVE_TIME,
    sub.RESVE_ENDTIME,
    sub.RESVE_REGIST,
    sub.PATNT_CODE,
    sub.PATNT_NM,
    sub.FCLTY_CODE,
    sub.FCLTY_NM,
    sub.DOC_EMP_NO,
    sub.DOC_EMP_NM,
    sub.BIRTH,
    sub.PATNT_TELNO
FROM (
    SELECT
        R.RESVE_NUM,
        R.RESVE_DATE,
        R.RESVE_TIME,
        R.RESVE_ENDTIME,
        R.RESVE_REGIST,
        R.PATNT_CODE,
        R.PATNT_NM,
        R.FCLTY_CODE,
        F.FCLTY_NM,
        D.DOC_EMP_NO,
        D.DOC_EMP_NM,
        SUBSTR(REGEXP_REPLACE(P.PATNT_IDENTINO, '[^0-9]', ''), 1, 7) AS BIRTH,
        P.PATNT_TELNO,
        ROW_NUMBER() OVER(PARTITION BY R.RESVE_DATE, R.RESVE_TIME ORDER BY R.RESVE_NUM) AS row_num
    FROM 
        RESERVATION R
    JOIN FCLTY_INFO F ON R.FCLTY_CODE = F.FCLTY_CODE
    JOIN PATIENT P ON R.PATNT_CODE = P.PATNT_CODE
    LEFT OUTER JOIN DOCTOR_DTL D ON R.FCLTY_CODE = D.FCLTY_CODE
    WHERE 
        F.FCLTY_CODE NOT IN ('K', 'L', 'O', 'M', 'N', 'H')
        AND R.RESVE_DATE = #{resevDate}
) sub
WHERE sub.row_num = 1 
</select>





