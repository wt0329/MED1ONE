<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.medical.clinc.dao.ClinicDao">
	
	<!-- 약품 리스트 검색 -->
	<select id="selectMedicineList" resultType="MedicineVO">
		SELECT
		    MEDI_CODE
		   ,MEDI_NM
		   ,MEDI_KIMSCL
		   ,MEDI_MTH
		   ,MEDI_BZNM
		   ,MEDI_STD
		   ,MEDI_UNIT
		   ,MEDI_AMT
		FROM
    		MEDICINE
    	WHERE MEDI_NM  LIKE '%' ||  #{mediNm} || '%'
	</select>
	
	<!-- 상병 리스트 검색 -->
	<select id="selectDiseaseList" resultType="DiseaseVO">
		SELECT
		    DSS_CODE
		  , DSS_NM
		  , DSS_ENNM
		  , DSS_NO
		FROM
		    DISEASE
		WHERE DSS_NM LIKE '%' || #{dssNm} || '%'
	</select>
	
	<!-- 약품 검색 수 update -->
	<update id="SearchCnt" parameterType="String">
		UPDATE MEDICINE
			SET SEARCH_CNT = SEARCH_CNT + 1
		WHERE MEDI_NM LIKE '%' || #{mediNm} || '%'
	</update>
	
	<!-- 즐겨찾는 약품 리스트 -->
	<select id="popluarMedicineList" resultType="MedicineVO">
		SELECT
		    MEDI_CODE
		  , MEDI_NM
		  , MEDI_KIMSCL
		  , MEDI_MTH
		  , MEDI_BZNM
		  , MEDI_STD
		  , MEDI_UNIT
		  , MEDI_AMT
		  , SEARCH_CNT
		FROM (
		    SELECT
		        MEDI_CODE
		      , MEDI_NM
		      , MEDI_KIMSCL
		      , MEDI_MTH
		      , MEDI_BZNM
		      , MEDI_STD
		      , MEDI_UNIT
		      , MEDI_AMT
		      , SEARCH_CNT
		    FROM
		        MEDICINE
		    ORDER BY SEARCH_CNT DESC
		) 
		WHERE ROWNUM <![CDATA[ <= ]]> 5
	</select>
	
	
</mapper>