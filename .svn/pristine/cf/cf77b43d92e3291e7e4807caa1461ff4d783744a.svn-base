    <select id="inPatntDetail" resultType="HospitalizationVO">
      WITH CTE AS (
         SELECT
          P.PATNT_NM
          , P.PATNT_CODE
          , R.REC_CODE
          , S.STAT_TIME
          , S.STAT_CODE
          , P.PATNT_IDENTINO
          , WEIGHT
             , HEIGHT
             , GEN
         , ROW_NUMBER() OVER(PARTITION BY R.REC_CODE ORDER BY S.STAT_TIME DESC) AS RN
            , CASE WHEN SUBSTR(PATNT_IDENTINO, 8, 1) IN ('1', '2')
                THEN EXTRACT(YEAR FROM SYSDATE) - EXTRACT(YEAR FROM TO_DATE('19' || SUBSTR(patnt_identino, 1, 2),'YYYY'))
                WHEN SUBSTR(PATNT_IDENTINO, 8, 1) IN ('3', '4')
                THEN EXTRACT(YEAR FROM SYSDATE) - EXTRACT(YEAR FROM TO_DATE('20' || SUBSTR(patnt_identino, 1, 2),'YYYY'))
               END AS PATNT_AGE
         FROM PATIENT P
         INNER JOIN RECEPTION R ON (P.PATNT_CODE = R.PATNT_CODE)
         INNER JOIN PATNT_STAT S ON (R.REC_CODE = S.REC_CODE)
         )
         SELECT
          H.PATNT_CODE 
          , PATNT_NM "patnt.patntNm"
          , SCKBD_RO 
          , SCKBD_NO 
          , TO_CHAR(TO_DATE(HSPTLZ_IN, 'YYYY-MM-DD'), 'YYYY-MM-DD') "hsptlzIn"
          , TO_CHAR(TO_DATE(HSPTLZ_OUT, 'YYYY-MM-DD'), 'YYYY-MM-DD') "hsptlzOut"
          , H.REC_CODE 
             , CTE.PATNT_AGE "patnt.patntAge"
             , SUBSTR(CTE.PATNT_IDENTINO, 1, 8) || '******' "patnt.patntIdentino"
             , H.HSPOD_CODE "hspodCode"
             , HSPTLZ_TOTAL
             , H.DOC_EMP_NO
             , C.CLINIC_CODE
             , PRES_CODE "hospitaliztion.presCode"
             , WEIGHT "patnt.weight"
             , HEIGHT "patnt.height"
             , GEN "patnt.gen"
             , PRES.PRES_CODE "presCode"
             , DSS.DSS_NM "dss.dssNm"
             , H.HSPTLZ_CODE "hsptlzCode"
             , EMP.EMP_NM "emp.empNm"
             , REC_CODE
            FROM HOSPITALIZATION H
            INNER JOIN EMPLOYEE EMP ON (H.DOC_EMP_NO = EMP.EMP_NO)
            INNER JOIN CTE ON (CTE.REC_CODE = H.REC_CODE)
            INNER JOIN CLINIC C ON (CTE.REC_CODE = C.REC_CODE)
            INNER JOIN DISEASE DSS ON ((C.DSS_CODE = DSS.DSS_CODE) AND (C.DSS_NO = DSS.DSS_NO))
            INNER JOIN PRESCRIPTION PRES ON (C.CLINIC_CODE = PRES.CLINIC_CODE)
            WHERE CTE.PATNT_CODE = #{patntCode} AND RN = 1 AND STAT_CODE = '011'
            ORDER BY "hsptlzOut" ASC
   </select>
   
   
   <!-- 병동에있는 환자정보 출력   -->
   <select id="patntDetail" parameterType="HospitalizationVO">
      WITH CTE AS (
             SELECT 
                 P.PATNT_NM 
                 ,P.PATNT_CODE
                 ,P.PATNT_IDENTINO
                 ,P.HEIGHT 
                 ,P.WEIGHT 
                 ,P.GEN 
                 ,P.PATNT_TELNO
                 ,R.REC_CODE
                 ,R.SYMPTOM
                 ,S.STAT_CODE
                 ,S.STAT_TIME
                 ,S.FCLTY_CODE
                 ,ROW_NUMBER() OVER (PARTITION BY R.REC_CODE ORDER BY S.STAT_TIME DESC) AS RN
             FROM
                 PATIENT P
                 INNER JOIN RECEPTION R ON P.PATNT_CODE = R.PATNT_CODE
                 INNER JOIN PATNT_STAT S ON S.REC_CODE = R.REC_CODE
           
         )
           SELECT 
            CTE.PATNT_CODE "patnt.patntCode"
           , CTE.PATNT_NM "patnt.patntNm"
           , SUBSTR(CTE.PATNT_IDENTINO, 1, 8) || '******' "patnt.patntIdentino"
           , (SUBSTR(CTE.PATNT_TELNO, 1, 3) || '-' || SUBSTR(CTE.PATNT_TELNO, 4, 4) || '-' || SUBSTR(CTE.PATNT_TELNO, 8, 4)) "patnt.patntTelno"
           , CTE.HEIGHT  "patnt.height"
           , CTE.WEIGHT "patnt.weight"
           , CTE.GEN  "patnt.gen"
           , CTE.REC_CODE "recCode"
           , CTE.STAT_CODE "statCode"
            , TO_CHAR(TO_DATE(HSPTLZ_IN, 'YYYY-MM-DD'), 'YYYY-MM-DD') "hsptlzIn"
           , TO_CHAR(TO_DATE(HSPTLZ_OUT, 'YYYY-MM-DD'), 'YYYY-MM-DD') "hsptlzOut"
           , H.HSPTLZ_CODE
           , H.SCKBD_RO
           , H.SCKBD_NO
           FROM CTE
           INNER JOIN CLINIC C ON (CTE.REC_CODE = C.REC_CODE)
           INNER JOIN PRESCRIPTION PRE ON (C.CLINIC_CODE = PRE.CLINIC_CODE)
           INNER JOIN HOSPITALIZATION H ON (CTE.REC_CODE = H.REC_CODE)
                      
           WHERE CTE.RN = 1 AND CTE.STAT_CODE ='011'  AND H.SCKBD_RO= #{sckbdRo} AND H.SCKBD_NO = #{sckbdNo}
           ORDER BY "hsptlzOut" ASC
   </select>
   
   
   
   <select id="wardDetail" parameterType="HospitalizationVO">
    WITH CTE AS (
             SELECT 
                 P.PATNT_NM 
                 ,P.PATNT_CODE
                   ,P.PATNT_IDENTINO
                   ,P.HEIGHT 
                   ,P.WEIGHT 
                   ,P.GEN 
                   ,P.PATNT_TELNO
                 ,R.REC_CODE
                   ,R.SYMPTOM
                 ,S.STAT_CODE
                 ,S.STAT_TIME
                 ,S.FCLTY_CODE
                 ,ROW_NUMBER() OVER (PARTITION BY R.REC_CODE ORDER BY S.STAT_TIME DESC) AS RN
             FROM
                 PATIENT P
                 INNER JOIN RECEPTION R ON P.PATNT_CODE = R.PATNT_CODE
                 INNER JOIN PATNT_STAT S ON S.REC_CODE = R.REC_CODE
         )
           SELECT 
            CTE.PATNT_CODE "patnt.patntCode"
           , CTE.PATNT_NM "patnt.patntNm"
           , SUBSTR(CTE.PATNT_IDENTINO, 1, 8) || '******' "patnt.patntIdentino"
           , (SUBSTR(CTE.PATNT_TELNO, 1, 3) || '-' || SUBSTR(CTE.PATNT_TELNO, 4, 4) || '-' || SUBSTR(CTE.PATNT_TELNO, 8, 4)) "patnt.patntTelno"
           , CTE.HEIGHT  "patnt.height"
           , CTE.WEIGHT "patnt.weight"
           , CTE.GEN  "patnt.gen"
           , CTE.REC_CODE "stat.recCode"
           , CTE.STAT_CODE "stat.statCode"
           , TO_CHAR(TO_DATE(HSPTLZ_IN, 'YYYY-MM-DD'), 'YYYY-MM-DD') "hsptlzIn"
           , TO_CHAR(TO_DATE(HSPTLZ_OUT, 'YYYY-MM-DD'), 'YYYY-MM-DD') "hsptlzOut"
           , H.HSPTLZ_CODE
           , H.SCKBD_RO
           , H.SCKBD_NO
           FROM CTE
           INNER JOIN CLINIC C ON (CTE.REC_CODE = C.REC_CODE)
           INNER JOIN PRESCRIPTION PRE ON (C.CLINIC_CODE = PRE.CLINIC_CODE)
           INNER JOIN HOSPITALIZATION H ON (CTE.REC_CODE = H.REC_CODE)

           WHERE CTE.RN = 1 AND CTE.STAT_CODE ='011' AND H.SCKBD_RO=#{sckbdRo}
           ORDER BY "hsptlzOut" ASC
   </select>
   
   <!-- 퇴원할때 환자 상태 수납대기로 -->
   <insert id="insertRecieveStat" parameterType="String">
   
   		INSERT INTO PATNT_STAT (
		    STAT_CODE,
		    REC_CODE,
		    FCLTY_CODE,
		    STAT_TIME
		) VALUES (
		    '015'
		    ,#{recCode,jdbcType=VARCHAR}
		    ,'J'
		    ,SYSDATE
		)
		
   </insert>
   
   
   <!--퇴원일자 update -->
   <update id="updateHsptlzOutDate">
   
   		UPDATE HOSPITALIZATION
		SET
		    HSPTLZ_OUT_DATE = SYSDATE
		WHERE
		     HSPTLZ_CODE = #{hsptlzCode}
		     
   </update>
   
   <!-- 침상사용가능 Y로 update -->
   <update id="updateSckbdStatY">
   
   		UPDATE SCKBD
			SET 
			AVAILABLE_YM = 'Y'
		WHERE SCKBD_RO = #{sckbdRo} AND SCKBD_NO = #{sckbdNo}
		
   </update>
   
   <!-- 침상 인원 현황 조회 -->
   <select id="selectSckbdCount">
   
   		SELECT SCKBD_RO
		   		,SCKBD_NO
		   		,AVAILABLE_YM
		FROM SCKBD
		WHERE AVAILABLE_YM='N'
   </select>
   
   <!-- 검사결과 조회 -->
   <select id="inspResultList" parameterType="InspRsltVO">
	   WITH CTE AS (
         SELECT
          P.PATNT_NM
          , P.PATNT_CODE
          , R.REC_CODE
          , S.STAT_TIME
          , S.STAT_CODE
          , P.PATNT_IDENTINO
          , WEIGHT
             , HEIGHT
             , GEN
         , ROW_NUMBER() OVER(PARTITION BY R.REC_CODE ORDER BY S.STAT_TIME DESC) AS RN
            , CASE WHEN SUBSTR(PATNT_IDENTINO, 8, 1) IN ('1', '2')
                THEN EXTRACT(YEAR FROM SYSDATE) - EXTRACT(YEAR FROM TO_DATE('19' || SUBSTR(patnt_identino, 1, 2),'YYYY'))
                WHEN SUBSTR(PATNT_IDENTINO, 8, 1) IN ('3', '4')
                THEN EXTRACT(YEAR FROM SYSDATE) - EXTRACT(YEAR FROM TO_DATE('20' || SUBSTR(patnt_identino, 1, 2),'YYYY'))
               END AS PATNT_AGE
         FROM PATIENT P
         INNER JOIN RECEPTION R ON (P.PATNT_CODE = R.PATNT_CODE)
         INNER JOIN PATNT_STAT S ON (R.REC_CODE = S.REC_CODE)
         )
         SELECT INSP_RSLT_CODE
		  , R.INSP_RSLT_CN
		  , R.INSP_DAY
		  , R.CLINIC_CODE
		  , R.INSP_CODE
		  , R.DOC_EMP_NO
		  , R.REC_CODE
		  , I.INSP_NM "insp.inspNm"
		FROM INSP_RSLT R 
			INNER JOIN INSPECTION I ON(R.INSP_CODE = I.INSP_CODE)
			INNER JOIN CTE ON (CTE.REC_CODE = R.REC_CODE)
            WHERE CTE.REC_CODE = #{recCode} AND RN = 1 AND STAT_CODE = '011'
   </select>
   
</mapper>


