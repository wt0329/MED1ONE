   TO_DATE('19' || SUBSTR(patnt_identino, 1, 2),'YYYY')) WHEN SUBSTR(PATNT_IDENTINO, 8, 1) IN ('3', '4') THEN
   EXTRACT(YEAR FROM SYSDATE) - EXTRACT(YEAR FROM TO_DATE('20' || SUBSTR(patnt_identino, 1, 2),'YYYY')) END AS PATNT_AGE
