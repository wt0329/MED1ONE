  border-radius: 50%; /* 동그란 모양으로 만들기 */
  overflow: hidden; /* 내부 컨텐츠를 동그란 영역 내에서 보이도록 설정 */
  background-color: lightgray; /* 원의 배경색 설정 */
}

.circle-profile img {
  width: 100%; /* 이미지를 원에 맞게 확장 */
  height: 100%;
