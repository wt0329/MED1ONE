<div id="ihealth-layout" class="theme-tradewind">
   <!-- main body area -->
   <div class="main px-lg-4 px-md-4">
      <!-- Body: Body -->
      <div class="body d-flex py-3">

         <div class="container-xxl">
            <!-- 1행 3열 카드 시작 -->
            <div class="row g-3 mb-3">
               <div class="col-md-4 col-lg-4"
                  style="width: 48%; margin-right: 1%;">
                  <div class="card">
                     <div
                        class="card-header py-3 d-flex justify-content-between bg-transparent border-bottom-0">
                        <h6 class="mb-0 fw-bold">진료 대기실</h6>
                     </div>
                     <div class="card-body">
                        <div id="#">
                           <table class="table table-border">
                              <thead>
                                 <tr>
                                    <td>환자 이름</td>
                                    <td>상태변경</td>
                                    <td>상태코드</td>
                                    <td>현재위치시각</td>
                                    <td>접수코드</td>
                                    <td>시설코드(진료실 대기)</td>
                                    <td></td>
                                 </tr>
                              </thead>
                              <tbody id="patntWait">
                                 
                              </tbody>
                           </table>

                        </div>
                     </div>
                  </div>
               </div>

               <div class="col-md-4 col-lg-4"
                  style="width: 48%; margin-right: 1%;">
                  <div class="card">
                     <div
                        class="card-header py-3 d-flex justify-content-between bg-transparent border-bottom-0">
                        <h6 class="mb-0 fw-bold">진료실</h6>
                     </div>
                     <div class="card-body">
                        <div >
                           <table class="table table-border">
                              <thead>
                                 <tr>
                                    <td>환자 이름</td>
                                    <td>상태변경</td>
                                    <td>상태코드</td>
                                    <td>현재위치시각</td>
                                    <td>접수코드</td>
                                    <td>시설코드(진료실 대기)</td>
                                    <td></td>
                                 </tr>
                              </thead>
                              <tbody id="patntRoom">
                                 
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>
               </div>
            </div>

         </div>
      </div>
   </div>
